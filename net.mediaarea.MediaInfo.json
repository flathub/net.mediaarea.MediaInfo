{
  "app-id": "net.mediaarea.MediaInfo",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "25.08",
  "default-branch": "stable",
  "sdk": "org.freedesktop.Sdk",
  "command": "mediainfo-gui",
  "rename-desktop-file": "mediainfo-gui.desktop",
  "rename-appdata-file": "mediainfo-gui.metainfo.xml",
  "rename-icon": "mediainfo",
  "finish-args": [
    "--filesystem=host:ro",
    "--filesystem=home:rw",
    "--socket=wayland",
    "--socket=x11",
    "--share=network",
    "--share=ipc"
  ],
  "modules": [
    {
      "name": "wxwidgets",
      "cleanup": [ "/bin", "/include", "/share", "/lib/wx" ],
      "rm-configure": true,
      "config-opts": [ "--enable-shared", "--with-gtk=3", "--enable-html", "--enable-webview", "--enable-webviewwebkit" ],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/wxWidgets/wxWidgets/releases/download/v3.3.1/wxWidgets-3.3.1.tar.bz2",
          "sha256": "f936c8d694f9c49a367a376f99c751467150a4ed7cbf8f4723ef19b2d2d9998d"
        },
        {
          "type": "script",
          "commands": [
            "cp -p /usr/share/automake-*/config.{sub,guess} .",
            "autoconf -f -B build/autoconf_prepend-include"
          ]
        }
      ]
    },
    {
      "name": "libzen",
      "subdir": "Project/GNU/Library",
      "config-opts": [ "--enable-shared", "--disable-static" ],
      "cleanup": [ "/bin", "/include", "/lib/pkgconfig", "/lib/*.la" ],
      "sources": [
        {
          "type": "archive",
          "url": "https://mediaarea.net/download/source/libzen/0.4.41/libzen_0.4.41.tar.xz",
          "sha256": "933bad3b7ecd29dc6bdc88a83645c83dfd098c15b0b90d6177a37fa1536704e8"
        }
      ]
    },
    {
      "name": "libmediainfo",
      "subdir": "Project/GNU/Library",
      "config-opts": [ "--enable-shared", "--disable-static", "--with-libcurl" ],
      "cleanup": [ "/bin", "/include", "/lib/pkgconfig", "/lib/*.la" ],
      "sources": [
        {
          "type": "archive",
          "url": "https://mediaarea.net/download/source/libmediainfo/25.10/libmediainfo_25.10.tar.xz",
          "sha256": "ad13d9797b046ce39d0c65a6f81d2aef2429734c21865a6a4c592c7c01f249dd"
        }
      ]
    },
    {
      "name": "mediainfo",
      "subdir": "Project/GNU/CLI",
      "sources": [
        {
          "type": "archive",
          "url": "https://mediaarea.net/download/source/mediainfo/25.10/mediainfo_25.10.tar.xz",
          "sha256": "366b325101ab1a9a4ee79fbdb8e3dd9e78bcc0a21c0f9b1966313aaed3d33502"
        }
      ]
    },
    {
      "name": "mediainfo-gui",
      "subdir": "Project/GNU/GUI",
      "cleanup": [ "share/pixmaps", "/share/apps", "/share/kde4", "/share/kservices5" ],
      "sources": [
        {
          "type": "archive",
          "url": "https://mediaarea.net/download/source/mediainfo/25.10/mediainfo_25.10.tar.xz",
          "sha256": "366b325101ab1a9a4ee79fbdb8e3dd9e78bcc0a21c0f9b1966313aaed3d33502"
        }
      ]
    }
  ]
}
