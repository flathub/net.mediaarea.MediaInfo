{
  "app-id": "net.mediaarea.MediaInfo",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "22.08",
  "default-branch": "stable",
  "sdk": "org.freedesktop.Sdk",
  "command": "mediainfo-gui",
  "rename-desktop-file": "mediainfo-gui.desktop",
  "rename-appdata-file": "mediainfo-gui.metainfo.xml",
  "rename-icon": "mediainfo",
  "finish-args": [
    "--filesystem=host:ro",
    "--filesystem=home:rw",
    "--socket=wayland",
    "--socket=x11",
    "--share=network",
    "--share=ipc"
  ],
  "modules": [
    {
      "name": "wxwidgets",
      "cleanup": [ "/bin", "/include", "/share", "/lib/wx" ],
      "rm-configure": true,
      "config-opts": [ "--enable-shared", "--enable-unicode", "--with-gtk=3" ],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/wxWidgets/wxWidgets/releases/download/v3.1.7/wxWidgets-3.1.7.tar.bz2",
          "sha256": "3d666e47d86192f085c84089b850c90db7a73a5d26b684b617298d89dce84f19"
        },
        {
          "type": "script",
          "commands": [
            "cp -p /usr/share/automake-*/config.{sub,guess} .",
            "autoconf -f -B build/autoconf_prepend-include"
          ]
        }
      ]
    },
    {
      "name": "libzen",
      "subdir": "Project/GNU/Library",
      "config-opts": [ "--enable-shared", "--disable-static" ],
      "cleanup": [ "/bin", "/include", "/lib/pkgconfig", "/lib/*.la" ],
      "sources": [
        {
          "type": "archive",
          "url": "https://mediaarea.net/download/source/libzen/0.4.41/libzen_0.4.41.tar.xz",
          "sha256": "933bad3b7ecd29dc6bdc88a83645c83dfd098c15b0b90d6177a37fa1536704e8"
        }
      ]
    },
    {
      "name": "libmediainfo",
      "subdir": "Project/GNU/Library",
      "config-opts": [ "--enable-shared", "--disable-static", "--with-libcurl" ],
      "cleanup": [ "/bin", "/include", "/lib/pkgconfig", "/lib/*.la" ],
      "sources": [
        {
          "type": "archive",
          "url": "https://mediaarea.net/download/source/libmediainfo/23.06/libmediainfo_23.06.tar.xz",
          "sha256": "c6b1ae8b2bbcf403340518b3c94f2ae75c8eb00682bfbbd18b22442e42dccfcd"
        }
      ]
    },
    {
      "name": "mediainfo-gui",
      "subdir": "Project/GNU/GUI",
      "cleanup": [ "share/pixmaps", "/share/apps", "/share/kde4", "/share/kservices5" ],
      "sources": [
        {
          "type": "archive",
          "url": "https://mediaarea.net/download/source/mediainfo/23.06/mediainfo_23.06.tar.xz",
          "sha256": "4c977eeb0ce8378728e64ef24f27fe62b2c5116fbf0541c824a44309f80ff88a"
        }
      ]
    }
  ]
}
